<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/recycler_shape"
    android:id="@+id/parent_layout_takhfifdar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_weight="0.5">

                            <TextView
                                android:id="@+id/cafe_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="Cafe Name"
                                android:textColor="#090909"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:fontFamily="sans-serif-smallcaps"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.443"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/cafe_address"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cafe Address"
                android:textColor="#090909"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="cursive"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cafe_name"
                app:layout_constraintVertical_bias="0.102" />

            <TextView
                android:id="@+id/info_takhfifdar"
                android:layout_width="159dp"
                android:layout_height="53dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="info about this cafe "
                android:textSize="14sp"
                android:textColor="@color/mainColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cafe_address"
                app:layout_constraintVertical_bias="0.609"></TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="175dp"
        android:layout_height="190dp">

                        <ImageView
                            android:id="@+id/imageView_takhfifdar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"></ImageView>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/discount_logo"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_takhfifdar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView_takhfifdar"
                app:layout_constraintVertical_bias="0.0"></ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</LinearLayout>