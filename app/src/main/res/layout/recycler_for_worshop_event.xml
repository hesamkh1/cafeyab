<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    app:cardCornerRadius="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Home.events.WorkshopEventFragment"
    android:id="@+id/parent_layout_workshopevent">


    <ImageView
        android:id="@+id/image_workshopevent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cafe_csiga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        tools:layout_editor_absoluteX="9dp"></ImageView>

    <TextView
        android:id="@+id/name_workshopevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="3dp"
        android:paddingRight="5dp"
        android:text="Name"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_workshopevent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="@+id/image_workshopevent"
        app:layout_constraintTop_toTopOf="@+id/image_workshopevent"
        app:layout_constraintVertical_bias="0.965"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9F807F7F"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="3dp"
        android:paddingRight="5dp"
        android:text="Start Time"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_workshopevent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/image_workshopevent"
        app:layout_constraintTop_toTopOf="@+id/image_workshopevent"
        app:layout_constraintVertical_bias="0.771"></TextView>

    <TextView
        android:id="@+id/time_workshopevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9F807F7F"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="3dp"
        android:text="22:22"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_workshopevent"
        app:layout_constraintEnd_toEndOf="@+id/image_workshopevent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771"></TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9F807F7F"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="3dp"
        android:paddingRight="5dp"
        android:text="Date"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_workshopevent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="@+id/image_workshopevent"
        app:layout_constraintTop_toTopOf="@+id/image_workshopevent"
        app:layout_constraintVertical_bias="0.965"></TextView>

    <TextView
        android:id="@+id/date_workshopevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:background="#9F807F7F"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="3dp"
        android:text="2020/10/18"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_workshopevent"
        app:layout_constraintEnd_toEndOf="@+id/image_workshopevent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/image_workshopevent"
        app:layout_constraintVertical_bias="0.965"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
