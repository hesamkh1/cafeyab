<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taabedlayout" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">22sp</item>
        <item name="android:textColor">#F3EBEB</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_comments" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-black</item>

    </style>
</resources>
